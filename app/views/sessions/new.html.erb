<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>

<fieldset>
<p>
	<%= label_tag :email %>	
	<%= email_field_tag :email, nil, autofocus: true, size: 40, required: true %>	
</p>

<p>
	<%= label_tag :password %>	
	<%= password_field_tag :password, nil, size: 40, required: true%>	
</p>

<p>
	<%= submit_tag 'Sign In' %>		
	Don't have an account yet? No problem! <%= link_to 'Sign Up', signup_path%>		
</p>

</fieldset>

<% end %>